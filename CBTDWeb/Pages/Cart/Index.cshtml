@page
@model CBTDWeb.Pages.Cart.IndexModel
@{
}
<form method="post">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="row">
                    <div class="col-6  pt-2">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Shopping Cart
                    </div>
                    <div class="col-6 text-end">
                        <!--go back to the root folder, go to page Index in root folder-->
                        <a asp-page="../Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @foreach (var item in Model.ShoppingCartVM.cartItems)
                {

                    <div class="row">
                        <div class="d-none d-lg-block col-lg-1 text-center py-2">
                            <img src="@item.Product.ImageUrl" class="rounded" width="100%" />
                        </div>
                        <div class="col-12 col-lg-6 pt-md-3">
                            <h5><strong>@item.Product.Name</strong></h5>
                            <p><small>@Html.Raw(item.Product.Description)</small></p>
                        </div>
                        <div class="col-12  col-lg-5 text-center row">
                            <div class="col-4 text-md-right pt-4">
                                <!--Because the Cart Price is depend on the number of item of each product-->
                                <h6><strong>@item.CartPrice.ToString("c")<span class="text-muted">x</span> @item.Count </strong></h6>
                            </div>
                            <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                <div class="w-75 btn-group" role="group">
                                    <button type="submit" asp-page-handler="plus" asp-route-cartId="@item.Id" class="btn btn-primary">
                                        <i class="bi bi-plus-square"></i>
                                    </button> &nbsp;
                                    <button type="submit" asp-page-handler="minus" asp-route-cartId="@item.Id" class="btn btn-warning">
                                        <i class="bi bi-dash-square"></i>
                                    </button>

                                </div>
                            </div>
                            <div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
                                <button type="submit" asp-page-handler="remove" asp-route-cartId="@item.Id" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </button>

                            </div>
                        </div>
                    </div>
                    <hr />
                }
                <div class="row">
                    <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-info"> Total (USD)</span>
                                <strong class="text-info">@Model.ShoppingCartVM.CartTotal.ToString("c")  </strong>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="card-footer row">
                    <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                        <a asp-page="../Summary" class="btn btn-success form-control">Summary</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>