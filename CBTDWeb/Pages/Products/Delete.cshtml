@page
@model CBTDWeb.Pages.Products.DeleteModel
@{
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-danger py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="mb-3">
                    <p>Are you sure you want to delete the <strong>@Model.Product.Name</strong> product?</p>

                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <input asp-for="Product.Id" type="hidden" />

                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>